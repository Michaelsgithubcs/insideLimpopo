<!-- Menu styles - must be after Bootstrap CSS -->
<link rel="stylesheet" href="/css/mobile-menu-fix.css">
<link rel="stylesheet" href="/css/custom-mobile-nav.css">
<link rel="stylesheet" href="/css/mobile-menu-final-fix.css">
<link rel="stylesheet" href="/css/desktop-nav-fixes.css">
<link rel="stylesheet" href="/css/desktop-nav-overrides.css">
<link rel="stylesheet" href="/css/mobile-menu-scroll-fix.css">
<link rel="stylesheet" href="/css/mobile-menu-debug.css">
<link rel="stylesheet" href="/css/horizontal-nav-scroll.css">


<nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
  <div class="container-fluid">
    <!-- Brand / Logo -->
    <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
      <img src="/assets/logo/InsideLimpopoLogoTransparentnav.png" alt="Logo" width="200" height="51" class="me-2">
      
    </a>
    
    <!-- Hamburger -->
    <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <!-- Navbar content -->
    <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
      <!-- Mobile Search box (appears in mobile menu) -->
      <div class="search-container d-lg-none" style="display: flex; flex-direction: row; align-items: stretch; height: 40px; flex-wrap: nowrap; margin: 15px 0;">
        <input type="search" class="search-input" id="search-mobile" placeholder="Search news..." aria-label="Search news" style="padding: 8px 12px; border: 1px solid #ccc; border-radius: 6px 0 0 6px; outline: none; height: 40px; box-sizing: border-box; flex: 1; font-size: 16px;" />
        <button class="search-button" type="button" aria-label="Search" style="background-color: #0056b3; color: #fff; border: none; padding: 8px 15px; border-radius: 0 6px 6px 0; cursor: pointer; height: 40px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
          <i class="fas fa-search"></i>
        </button>
      </div>
      
      <!-- Horizontal Scroll Container -->
      <div class="nav-scroll-wrapper position-relative d-none d-lg-flex">
        <!-- Left Arrow -->
        <button class="nav-scroll-arrow nav-scroll-left" aria-label="Scroll navigation left" tabindex="0">
          <i class="fas fa-chevron-left"></i>
        </button>
        
        <!-- Scrollable Navigation -->
        <div class="nav-scroll-container">
          <ul class="navbar-nav mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link <%= currentCategory === 'home' ? 'active' : '' %>" href="/">Home</a>
            </li>
            <% if (typeof visibleCategories !== 'undefined') { %>
              <% visibleCategories.forEach(category => { 
                const excluded = ['sports','news','events','podcast','opinion','vacancies']; 
                const catName = category.name.toLowerCase(); 
                const isActive = currentCategory === catName;
              %>
                <li class="nav-item">
                  <a class="nav-link <%= isActive ? 'active' : '' %>" href="<%= excluded.includes(catName) ? '/' + catName : '/articles/added/' + catName %>">
                    <%= category.name %>
                  </a>
                </li>
              <% }) %>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link <%= currentCategory === 'events' ? 'active' : '' %>" href="/events">Events</a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= currentCategory === 'sports' ? 'active' : '' %>" href="/sports">Sports</a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= currentCategory === 'opinion' ? 'active' : '' %>" href="/opinion">Opinion</a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= currentCategory === 'podcast' ? 'active' : '' %>" href="/podcast">Podcast</a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= currentCategory === 'vacancies' ? 'active' : '' %>" href="/vacancies">Vacancies</a>
              </li>
            <% } %>
            <a class="nav-link <%= currentCategory === 'vacancies' ? 'active' : '' %>" href="/vacancies">Vacancies</a>
            <a class="nav-link <%= currentCategory === 'privacy' ? 'active' : '' %>" href="/privacy">Privacy Policy</a>
          </ul>
            
        </div>
        
        <!-- Right Arrow -->
        <button class="nav-scroll-arrow nav-scroll-right" aria-label="Scroll navigation right" tabindex="0">
          <i class="fas fa-chevron-right"></i>
        </button>
      </div>
      
      <!-- Mobile Nav Items (original structure) -->
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0 flex-wrap d-lg-none">
        <li class="nav-item">
          <a class="nav-link <%= currentCategory === 'home' ? 'active' : '' %>" href="/">Home</a>
        </li>
        <% if (typeof visibleCategories !== 'undefined') { %>
          <% visibleCategories.forEach(category => { 
            const excluded = ['sports','news','events','podcast','opinion','vacancies']; 
            const catName = category.name.toLowerCase(); 
            const isActive = currentCategory === catName;
          %>
            <li class="nav-item">
              <a class="nav-link <%= isActive ? 'active' : '' %>" href="<%= excluded.includes(catName) ? '/' + catName : '/articles/added/' + catName %>">
                <%= category.name %>
              </a>
            </li>
          <% }) %>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link <%= currentCategory === 'events' ? 'active' : '' %>" href="/events">Events</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= currentCategory === 'sports' ? 'active' : '' %>" href="/sports">Sports</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= currentCategory === 'opinion' ? 'active' : '' %>" href="/opinion">Opinion</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= currentCategory === 'podcast' ? 'active' : '' %>" href="/podcast">Podcast</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= currentCategory === 'vacancies' ? 'active' : '' %>" href="/vacancies">Vacancies</a>
          </li>
        <% } %>
      </ul>
      
      <!-- Right side controls -->
      <div class="d-flex align-items-center gap-3 justify-content-center">
        <!-- News Source Toggle -->
        <div class="news-source-toggle-nav me-3">
          <div class="toggle-buttons">
            <button id="worldNewsBtn" class="toggle-btn-nav">World</button>
            <button id="saNewsBtn" class="toggle-btn-nav active">Local</button>
          </div>
        </div>
        
        <!-- Search box -->
        <div class="search-container d-none d-lg-flex" style="display: flex; flex-direction: row; align-items: stretch; height: 32px; flex-wrap: nowrap;">
          <input type="search" class="search-input" id="search" placeholder="Search news..." aria-label="Search news" style="padding: 5px 10px; border: 1px solid #ccc; border-radius: 4px 0 0 4px; outline: none; height: 32px; box-sizing: border-box; flex-shrink: 0;" />
          <button class="search-button" type="button" aria-label="Search" style="background-color: #0056b3; color: #fff; border: none; padding: 6px 12px; border-radius: 0 4px 4px 0; cursor: pointer; height: 32px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</nav>

<script src="/scripts/mobile-menu.js"></script>
<script src="/scripts/responsive-nav-handler.js"></script>
<script src="/scripts/breaking-news-ticker.js"></script>
<script src="/scripts/nav-link-debug.js"></script>
<script src="/scripts/news-toggle.js"></script>
<script src="/scripts/horizontal-nav-scroll.js"></script>
